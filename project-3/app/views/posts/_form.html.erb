<%= form_with model: [ @user, @post ], local: true do |form| %>
    <p>
      <%= form.label :title %><br>
      <%= form.text_field :title %>
      <% @post.errors.full_messages_for(:title).each do |message| %>
        <div style="color: red;"><%= message %></div>
      <% end %>
    </p>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :body %>
      <% @post.errors.full_messages_for(:body).each do |message| %>
        <div style="color: red;"><%= message %></div>
      <% end %>
    </p>
    <p>
      <%= form.submit %>
    </p>
<% end %>